    <div id="dots" class="dots" aria-hidden="false"></div>
  </section>

  <footer>
    –î–∞–Ω–Ω—ã–µ –∏ —Ñ–æ—Ä–º—É–ª–∏—Ä–æ–≤–∫–∏ –æ—Å–Ω–æ–≤–∞–Ω—ã –Ω–∞ Comm100 Live Chat Benchmark Report¬†2025.
  </footer>

  <script>
    // –ü—Ä–æ—Å—Ç–∞—è –ª–æ–≥–∏–∫–∞ –∫–∞—Ä—É—Å–µ–ª–∏: –∫–Ω–æ–ø–∫–∏, —Å–≤–∞–π–ø—ã, —Ç–æ—á–∫–∏
    const track = document.getElementById('track');
    const prev = document.getElementById('prev');
    const next = document.getElementById('next');
    const dots = document.getElementById('dots');

    const cards = Array.from(track.querySelectorAll('.card'));

    function cardWidth(){
      const style = getComputedStyle(track);
      const gap = parseInt(style.gap) || 16;
      const col = cards[0].getBoundingClientRect().width + gap;
      return col;
    }

    function indexNow(){
      const cw = cardWidth();
      return Math.round(track.scrollLeft / cw);
    }

    function goTo(i){
      const cw = cardWidth();
      const clamped = Math.max(0, Math.min(cards.length-1, i));
      track.scrollTo({left: clamped * cw, behavior:'smooth'});
      setActiveDot(clamped);
    }

    function buildDots(){
      dots.innerHTML = '';
      cards.forEach((_, i)=>{
        const b = document.createElement('button');
        b.setAttribute('aria-label', `–ö —Å–ª–∞–π–¥—É ${i+1}`);
        b.addEventListener('click', ()=> goTo(i));
        dots.appendChild(b);
      });
      setActiveDot(0);
    }

    function setActiveDot(i){
      Array.from(dots.children).forEach((d, idx)=>{
        d.classList.toggle('active', idx === i);
      });
    }

    prev.addEventListener('click', ()=> goTo(indexNow()-1));
    next.addEventListener('click', ()=> goTo(indexNow()+1));

    // –∫–ª–∞–≤–∏–∞—Ç—É—Ä–∞
    track.addEventListener('keydown', (e)=>{
      if(e.key==='ArrowRight') goTo(indexNow()+1);
      if(e.key==='ArrowLeft') goTo(indexNow()-1);
    });

    // —Å–≤–∞–π–ø—ã
    let x0=null;
    track.addEventListener('pointerdown', (e)=>{ x0=e.clientX; track.setPointerCapture(e.pointerId); });
    track.addEventListener('pointerup', (e)=>{
      if(x0===null) return; const dx=e.clientX-x0; x0=null;
      if(Math.abs(dx)>40){ dx<0 ? goTo(indexNow()+1) : goTo(indexNow()-1); }
    });

    // –ø—Ä–∏ –ø—Ä–æ–∫—Ä—É—Ç–∫–µ —Ä—É–∫–∞–º–∏
    track.addEventListener('scroll', ()=>{
      setActiveDot(indexNow());
    });

    window.addEventListener('resize', ()=> setActiveDot(indexNow()));

    buildDots();
  </script>
